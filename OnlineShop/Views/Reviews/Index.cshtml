@model IEnumerable<OnlineShop.Models.Reviews>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @{
        if (ViewBag.canAddReview)
        {
            @Html.ActionLink("Create new", "Create", new { id = ViewBag.Product.ProductId })
            <br />
        }
    }
    @Html.ActionLink("Back to product", "Details", "Products", new { id = ViewBag.Product.ProductId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @{
                if (item.AuthorId == ViewBag.LoggedUserId || ViewBag.HasAdministratorRole)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span> 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <span>|</span>
                }
            }
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
